/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
	// (a and not(sel)) or (b and sel)
	Nand(a = sel, b = sel, out = selNot);                
    Nand(a = a, b = selNot, out = aAnd);                 
    Nand(a = b, b= sel, out = bAnd);                    
    Nand(a = aAnd, b = bAnd, out = out);                 
}
